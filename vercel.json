{
  "version": 2,
  "builds": [
    {
      "src": "dist/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/dist/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/build/index.html"
    }
  ]
}